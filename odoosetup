# :command.initialize
initialize() {
	version="0.1.0"
	long_usage=''
	set -e

	# :command.environment_variables_default
	export PLAYBOOK_DIR="${PLAYBOOK_DIR:-./playbooks}"

}

# :command.run
run() {
	declare -A args=()
	declare -A deps=()
	declare -a other_args=()
	declare -a input=()
	normalize_input "$@"
	parse_requirements "${input[@]}"

	case "$action" in
		"setup") odoosetup_setup_command ;;
		"play") odoosetup_play_command ;;
		"role") odoosetup_role_command ;;
		"syntax") odoosetup_syntax_command ;;
		"ping") odoosetup_ping_command ;;
	esac
}

initialize
run "$@"
